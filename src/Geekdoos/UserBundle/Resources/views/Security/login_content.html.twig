{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-material m-b-1">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'security.login.username'|trans }}">
    </div>
    <div class="form-group">
        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans }}">
    </div>
    <div class="form-group">
        &nbsp;&nbsp;&nbsp;&nbsp;
        <label class="custom-control custom-checkbox" for="remember_me">
            <input type="checkbox" class="custom-control-input" id="remember_me" name="_remember_me" value="on" >
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">{{ 'security.login.remember_me'|trans }}</span>
        </label>
    </div>
    <div class="p-x-2 form-group m-b-0">
        <button type="submit" id="_submit" name="_submit" class="btn btn-purple btn-block text-uppercase">{{ 'security.login.submit'|trans }}</button>
    </div>
</form>
